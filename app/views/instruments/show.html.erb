<div class="ui vertical segment">

  <div class="ui header">
    <div class="ui huge breadcrumb">
      <%= link_to instruments_path, class:'section' do %>
        <i class="blue cube icon"></i>
        <%=t 'sidebar.instruments' %>
      <% end %>
      <i class="right chevron icon divider"></i>
      <div class="active section"><%= @instrument.title %></div>
    </div>
  </div>

  <div class="ui visible message">
    <%=t '.message',{author: @instrument.user.name, time:(l @instrument.created_at,:format=>:long)} %>
  </div>
  <p>
    <%= link_to t('.edit'), edit_instrument_path(@instrument), class:"ui button" %>
  </p>
</div>
<div class="ui piled segment"><%= raw @article.content %></div>
