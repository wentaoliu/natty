<div class="ui vertical segment">
  <h2 class="ui header">
    <i class="circular inverted blue briefcase icon"></i>
    <div class="content">
      <%=t 'sidebar.meetings' %>
    </div>
  </h2>
  <%= form_tag meetings_path, method:'GET', class:"ui form" do %>
    <div class="inline fields">
      <div class="field">
        <%= text_field_tag :search, params[:search], placehoder: t('.search') %>
      </div>
      <div class="field">
        <%= submit_tag t('.search'), class:"ui blue button" %>
      </div>
    </div>
  <% end %>
  <%= link_to new_meeting_path, class:"ui green labeled icon button" do %>
    <i class="plus icon"></i><%=t '.new' %>
  <% end %>
</div>

<table class="ui table segment">
  <thead>
    <tr>
      <th class="five wide"><%=t '.table.title' %></th>
      <th class="four wide"><%=t '.table.time' %></th>
      <th class="three wide"><%=t '.table.place' %></th>
      <th class="two wide"><%=t '.table.public' %></th>
      <th class="two wide"></th>
    </tr>
  </thead>
  <tbody>
    <% @meetings.each do |item| %>
      <tr>
        <td><%= link_to item.title, item %></td>
        <td><%= "#{l item.starts_at,format: :short} - #{l item.ends_at,format: :short}" %></td>
        <td><%= item.place %></td>
        <td><%= item.public ? content_tag('i',nil,class:'checkmark icon')
              : content_tag('i',nil, class:'remove icon') %></td>
        <td>
          <%= link_to content_tag('i',nil,class:'blue edit icon'), edit_meeting_path(item) %>
          <%= link_to content_tag('i',nil,class:'red trash icon'), item, method: :delete,
              data: { confirm: t('.table.delete_confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= pagination meetings_path, params[:page], @pages %>
