<div class="ui vertical segment">
  <h2 class="ui header">
    <i class="blue user icon"></i>
    <div class="content">
      <%= @profile.user.name %>
    </div>
  </h2>
</div>

<div class="ui stackable two column grid">

  <div class="four wide column">
    <div class="ui special cards">
      <div class="card">
        <%= image_tag @profile.photo.url(:small) %>
        <div class="content">
          <div class="header"><%= @profile.user.name %></div>
          <div class="meta">
            <span class="date">
              <%=t '.date', created_at: l(@profile.user.created_at, format: :long) %>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="twelve wide column">

    <div class="ui form segment">
      <div class="field">
        <label>Public email</label>
        <input type="email" value="<%= @profile.email_public %>" readonly>
      </div>

      <div class="two fields">
        <div class="field">
          <label>Position</label>
          <input type="text" value="<%= t('.positions')[@profile.position] %>" readonly>
        </div>

        <div class="field">
          <label>Grade</label>
          <input type="text" value="<%= @profile.grade %>" readonly>
        </div>
      </div>

      <div class="field">
        <label>Resume</label>
        <%= raw @profile.resume %>
      </div>


  </div>
</div>
