<h2 class="ui center aligned icon header">
  <i class="circular sign in icon"></i>
  <%= t '.signin' %>
</h2>
<% if flash[:error] %>
  <div class="ui icon error message">
    <i class="attention circle icon"></i>
    <div class="content">
      <p><%= flash[:error] %></p>
    </div>
  </div>
<% end %>
<%= form_for(:session, url: sessions_path,html:{class:'ui form segment'}) do |f| %>
  <div class="field">
    <%= f.label :username, t('.username') %>
    <%= f.text_field :username, placeholder: t('.username'), required: :required %>
  </div>
  <div class="field">
    <%= f.label :password, t('.password') %>
    <%= f.password_field :password, placeholder: t('.password'), required: :required  %>
  </div>
  <div class="field">
    <%= show_simple_captcha %>
  </div>
  <div class="field">
    <div class="ui toggle checkbox">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, t('.remember_me') %>
    </div>
  </div>

  <div class="2 fluid ui buttons">
    <%= f.submit t('.submit'), class: "ui blue button" %>
    <div class="or" data-text="<%= t('.or') %>"></div>
    <div class="ui green button"><%= t('.apply') %></div>
  </div>

  <div class="ui hidden divider"></div>
  <div class="ui bottom right attached label">
    <%= t('.powered_by_html',
      :link => link_to('RTISS', 'http://rtiss.org')) %>
  </div>
<% end %>

<script>
$(document).on("ready page:load", function() {
  $('.ui.checkbox')
    .checkbox()
  ;
});
</script>
