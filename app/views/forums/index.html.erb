<div class="ui secondary menu">
  <div class="item">
    <div class="ui huge breadcrumb">
      <%= link_to t('module.topics'), forums_path, class: "section" %>
      <i class="right angle icon divider"></i>
      <div class="active section">All Fourms</div>
    </div>
  </div>
  <div class="right menu">
    <%= link_to new_forum_path, class:"item" do %>
      <i class="plus icon"></i><%=t '.new' %>
    <% end if can? :create, Forum %>

    <%= form_tag forums_path, method:'GET', class:"item" do %>
      <div class="ui icon input">
        <%= text_field_tag :search, params[:search], placeholder:t('.search') %>
        <i class="search link icon"></i>
      </div>
    <% end %>
  </div>
</div>

<table class="ui table segment">
  <thead>
    <tr>
      <th class="four wide"><%=t '.table.title' %></th>
      <th class="nine wide"><%=t '.table.author' %></th>
      <th class="three wide"><%=t '.table.time' %></th>
    </tr>
  </thead>
  <tbody>
    <% @forums.each do |forum| %>
      <tr>
        <td>
          <%= link_to forum.name, forum_topics_path(forum) %>
        </td>
        <td><%= forum.description %></td>
        <td><%=l forum.updated_at,:format=>:long %></td>
      </tr>
    <% end %>
  </tbody>
</table>
