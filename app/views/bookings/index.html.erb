<div class="ui secondary menu">
  <div class="item">
    <div class="ui huge breadcrumb">
      <a class="section"><%=t 'module.instruments' %></a>
      <i class="right angle icon divider"></i>
      <%= link_to @instrument.name, @instrument, class: "section" %>
      <i class="right angle icon divider"></i>
      <div class="section">Bookings</div>
    </div>
  </div>
  <div class="right menu">
    <%= link_to new_instrument_booking_path, class:"item" do %>
      <i class="plus icon"></i><%=t '.new' %>
    <% end if can? :create, Booking %>
  </div>
</div>

<div class="ui list">
  <% @bookings.each do |booking| %>
    <div class="item">
      <%= image_tag booking.user.avatar.url(:thumb), class: 'ui avatar image' %>
      <div class="content">
        <%= link_to booking.user.name, [@instrument, booking], class: "header" %>
        <div class="description">
          <%=l booking.starts_at, format: :long %>-
          <%=l booking.ends_at, format: :long %>
        </div>
      </div>
    </div>
  <% end %>
</div>
