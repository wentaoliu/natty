<div class="ui vertical segment">

  <div class="ui header">
    <div class="ui huge breadcrumb">
      <%= link_to news_index_path, class:'section' do %>
        <i class="blue newspaper outline icon"></i>
        <%=t 'module.news' %>
      <% end %>
      <i class="right chevron icon divider"></i>
      <div class="active section"><%= @news.title %></div>
    </div>
  </div>

  <p>
    <%= link_to edit_news_path(@news), class:"ui labeled icon button" do %>
      <i class="edit icon"></i><%= t '.edit' %>
    <% end if can? :update, @news %>
    <%= link_to @news, method: :delete, data: { confirm: t('.delete_confirm') },
        class:"ui red labeled icon button" do %>
      <i class="trash icon"></i><%=t '.delete' %>
    <% end if can? :destroy, @news %>
  </p>
</div>
<div class="ui piled segment"><%= raw @news.content %></div>
