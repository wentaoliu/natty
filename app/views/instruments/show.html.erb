<div class="ui vertical segment">

  <div class="ui header">
    <div class="ui huge breadcrumb">
      <%= link_to instruments_path, class:'section' do %>
        <i class="blue cube icon"></i>
        <%=t 'module.instruments' %>
      <% end %>
      <i class="right chevron icon divider"></i>
      <div class="active section"><%= @instrument.title %></div>
    </div>
  </div>

  <div class="ui visible message">
    <%=t '.maintainer' %>
    <%= User.find(@instrument.maintainer).name %>
  </div>
  <p>
    <%= link_to edit_instrument_path(@instrument), class:"ui labeled icon button" do %>
      <i class="edit icon"></i><%= t '.edit' %>
    <% end %>
    <% if is_admin? %>
      <%= link_to @instrument, method: :delete, data: { confirm: t('.delete_confirm') },
          class:"ui red labeled icon button" do %>
        <i class="trash icon"></i><%=t '.delete' %>
      <% end %>
    <% end %>
  </p>
</div>
<div class="ui piled segment"><%= raw @instrument.content %></div>
