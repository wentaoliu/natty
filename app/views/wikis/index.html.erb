<div class="ui vertical segment">
  <h2 class="ui header">
    <i class="circular inverted blue pencil icon"></i>
    <div class="content">
      <%=t 'module.wikis' %>
    </div>
  </h2>
  <%= form_tag wikis_path, method:'GET', class:"ui form" do %>
    <div class="inline fields">
      <div class="field">
        <%= text_field_tag :search, params[:search], placeholder: t('.search') %>
      </div>
      <div class="field">
        <%= submit_tag t('.search'), class:"ui blue button" %>
      </div>
    </div>
  <% end %>
  <%= link_to new_wiki_path, class:"ui green labeled icon button" do %>
    <i class="plus icon"></i><%=t '.new' %>
  <% end if can? :create, Wiki %>
</div>

<table class="ui table segment">
  <thead>
    <tr>
      <th class="twelve wide"><%=t '.table.title' %></th>
      <th class="four wide"><%=t '.table.updated_at' %></th>
    </tr>
  </thead>
  <tbody>
    <% @wikis.each do |wiki| %>
      <tr>
        <td><%= link_to wiki.title, wiki_path(wiki) %></td>
        <td><%=l wiki.updated_at,:format=>:long %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @wikis %>
