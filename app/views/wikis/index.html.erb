<div class="ui secondary menu">
  <div class="item">
    <div class="ui huge breadcrumb">
      <a class="section"><%=t 'module.wikis' %></a>
      <i class="right angle icon divider"></i>
      <div class="active section">List</div>
    </div>
  </div>
  <div class="right menu">
    <%= link_to new_wiki_path, class:"item" do %>
      <i class="plus icon"></i><%=t '.new' %>
    <% end if can? :create, Wiki %>

    <%= form_tag wikis_path, method:'GET', class:"item" do %>
      <div class="ui icon input">
        <%= text_field_tag :search, params[:search], placeholder:t('.search') %>
        <i class="search link icon"></i>
      </div>
    <% end %>
  </div>
</div>

<table class="ui table segment">
  <thead>
    <tr>
      <th class="twelve wide"><%=t '.table.title' %></th>
      <th class="four wide"><%=t '.table.updated_at' %></th>
    </tr>
  </thead>
  <tbody>
    <% @wikis.each do |wiki| %>
      <tr>
        <td><%= link_to wiki.title, wiki_path(wiki) %></td>
        <td><%=l wiki.updated_at,:format=>:long %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @wikis %>
