<div class="ui vertical segment">
  <h2 class="ui header">
    <i class="circular inverted blue comments icon"></i>
    <div class="content">
      <%=t 'sidebar.topics' %>
    </div>
  </h2>
  <%= form_tag topics_path, method:'GET', class:"ui floated right form" do %>
    <div class="inline fields">
      <div class="field">
        <%= text_field_tag :search, params[:search], placeholder:t('.search') %>
      </div>
      <div class="field">
        <%= submit_tag t('.search'), class:"ui blue button" %>
      </div>
    </div>
  <% end %>
  <%= link_to new_topic_path, class:"ui green labeled icon button" do %>
    <i class="plus icon"></i><%=t '.new' %>
  <% end %>
</div>

<table class="ui table segment">
  <thead>
    <tr>
      <th class="nine wide"><%=t '.table.title' %></th>
      <th class="two wide"><%=t '.table.author' %></th>
      <th class="three wide"><%=t '.table.time' %></th>
      <th class="one wide"><%=t '.table.comments' %></th>
      <th class="one wide"></th>
    </tr>
  </thead>
  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td>
          <%= content_tag('div',topic.category,class:"ui label") if topic.category %>
          <%= link_to topic.title, topic_path(topic) %>
        </td>
        <td><%= topic.user.name %></td>
        <td><%=l topic.updated_at,:format=>:long %></td>
        <td><%= topic.comments.size %></td>
        <% if is_admin? %>
          <td>
            <%= link_to content_tag('i',nil,class:'red trash icon'), topic, method: :delete,
                  data: { confirm: t('.table.delete_confirm') } %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= pagination topics_path, params[:page], @pages %>
