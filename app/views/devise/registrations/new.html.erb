<h2 class="ui center aligned icon header">
  <i class="circular user icon"></i>
  <%= t 'sessions.new.apply' %>
</h2>

<% if @user.errors.any? %>
  <div class="ui icon error message">
    <i class="attention circle icon"></i>
    <div class="content">
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </div>
  </div>
<% end %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class:'ui form segment' }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, t('.email') %>
    <%= f.email_field :email, placeholder: t('.email'), autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password, t('.password') %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, placeholder: t('.password'), autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, t('.password_confirmation') %>
    <%= f.password_field :password_confirmation, placeholder: t('.password_confirmation'), autocomplete: "off" %>
  </div>

  <%= f.submit t('.submit'), class:"ui blue button" %>
  <%= link_to t('.cancel'), users_path, class:"ui button" %>
<% end %>

<%= render "devise/shared/links" %>
