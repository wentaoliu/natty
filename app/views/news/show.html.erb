<div class="ui vertical segment">

  <div class="ui header">
    <div class="ui huge breadcrumb">
      <%= link_to news_index_path, class:'section' do %>
        <i class="blue newspaper outline icon"></i>
        <%=t 'sidebar.news' %>
      <% end %>
      <i class="right chevron icon divider"></i>
      <div class="active section"><%= @news.title %></div>
    </div>
  </div>

  <p>
    <%= link_to t('.edit'), edit_news_path(@news), class:"ui button" %>
  </p>
</div>
<div class="ui piled segment"><%= raw @news.content %></div>
