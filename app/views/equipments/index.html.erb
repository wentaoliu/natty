<div class="ui vertical segment">
  <h2 class="ui header">
    <i class="circular inverted blue cube icon"></i>
    <div class="content">
      <%=t 'sidebar.equipments' %>
    </div>
  </h2>
  <%= form_tag equipments_path, method:'GET', class:"ui form" do %>
    <div class="inline fields">
      <div class="field">
        <%= text_field_tag :search, params[:search] %>
      </div>
      <div class="field">
        <%= submit_tag t('.search'), class:"ui blue button" %>
      </div>
    </div>
  <% end %>
</div>

<table class="ui table segment">
  <thead>
    <tr>
        <th class="ten wide"><%=t '.title' %></th>
        <th class="six wide"><%=t '.time' %></th>
        <% if current_user %>
        <th>删除</th>
        <% end %>
    </tr>
  </thead>
  <tbody>
    <% @equipments.each do |equipment| %>
    <tr>
        <td><%= link_to equipment.title, equipment_path(equipment) %></td>
        <td><%=l equipment.updated_at,:format=>:long %></td>
        <% if current_user %>
        <td><form name="form_{{item.id}}" action='{{sub_uri}}/equipment/{{item.id}}/delete' method='post'>
            <a href='javascript:document.form_{{item.id}}.submit();'>删除</a>
        </form></td>
        <% end %>
    </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <th colspan="2">
        <%= link_to new_equipment_path, class:"ui green labeled icon button" do %>
          <span class="icon fa fa-plus"></span><%=t '.new' %>
        <% end %>
      </th>
    </tr>
  </tfoot>
</table>

<%= pagination equipments_path, params[:page], @pages %>
