<div class="ui secondary menu">
  <div class="item">
    <div class="ui huge breadcrumb">
      <%= link_to t('module.topics'), forums_path, class:"section" %>
      <i class="right angle icon divider"></i>
      <%= link_to @forum.name, forum_topics_path(@forum), class:"section" %>
      <i class="right angle icon divider"></i>
      <div class="active section"><%=t '.new' %></div>
    </div>
  </div>
  <div class="right menu">
    <%= link_to forum_topics_path(@forum), class:"item" do %>
      <i class="remove icon"></i><%=t '.cancel' %>
    <% end %>
  </div>
</div>

<%= render 'form' %>
