<% content_for :head do %>
  <%= javascript_include_tag 'editor', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'editor', media: 'all', 'data-turbolinks-track' => true %>
<% end %>

<%= form_for(@expense, html:{class:'ui form segment'}) do |f| %>
  <% if @expense.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@expense.errors.count, "error") %> prohibited this expense from being saved:</h2>

      <ul>
      <% @expense.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :title, t('.title') %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :serial, t('.serial') %>
    <%= f.text_field :serial %>
  </div>
  <div class="two fields">
    <div class="field">
      <%= f.label :sum, t('.sum') %>
      <%= f.text_field :sum %>
    </div>
    <div class="field">
      <%= f.label :date, t('.date') %>
      <%= f.date_field :date %>
    </div>
  </div>
  <div class="field">
    <%= f.label :description, t('.description') %>
    <%= f.text_area :description, class:'editor'%>
  </div>

  <%= f.submit t('.submit'), class:"ui blue button" %>
<% end %>
