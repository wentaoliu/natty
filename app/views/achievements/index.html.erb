<div class="ui vertical segment">
  <h2 class="ui header">
    <i class="circular inverted blue flag icon"></i>
    <div class="content">
      <%=t 'module.achievements' %>
    </div>
  </h2>
  <%= form_tag achievements_path, method:'GET', class:"ui form" do %>
    <div class="inline fields">
      <div class="field">
        <%= text_field_tag :search, params[:search], placeholder: t('.search') %>
      </div>
      <div class="field">
        <%= submit_tag t('.search'), class:"ui blue button" %>
      </div>
    </div>
  <% end %>
  <%= link_to new_achievement_path, class:"ui green labeled icon button" do %>
    <i class="plus icon"></i><%=t '.new' %>
  <% end %>
</div>


<table class="ui table segment">
  <thead>
    <tr>
      <th class="eight wide"><%=t '.table.title' %></th>
      <th class="ten two"><%=t '.table.type' %></th>
      <th class="three wide"><%=t '.table.author' %></th>
      <th class="three wide"><%=t '.table.date' %></th>
    </tr>
  </thead>
  <tbody>
    <% @achievements.each do |item| %>
      <tr>
        <td><%= link_to item.title, item %></td>
        <td><%= t('achievements.form.types')[item.type] %></td>
        <td><%= item.author %></td>
        <td><%=l item.date %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @achievements %>
