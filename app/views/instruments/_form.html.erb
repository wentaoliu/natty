<% if @instrument.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@instrument.errors.count, "error") %> prohibited this news from being saved:</h2>

    <ul>
    <% @instrument.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>


<%= form_for(@instrument, :html=>{:class => "ui form segment"}) do |f| %>
  <div class="field">
    <%= f.label :title, t('.title') %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :maintainer, t('.maintainer') %>
    <%= f.select :maintainer, User.pluck(:name, :id),
        {}, {class:"ui dropdown"} %>
  </div>

  <div class="field">
    <%= f.label :content, t('.content') %>
    <%= f.text_area :content, class:'editor' %>
  </div>

  <div class="field">
    <div class="ui toggle checkbox">
      <%= f.check_box :hidden %>
      <%= f.label :hidden, t('.hidden') %>
    </div>
  </div>

  <%= f.submit t('.submit'), class:"ui blue button" %>
  <%= link_to t('.cancel'), instruments_path, class:"ui button" %>
<% end %>
