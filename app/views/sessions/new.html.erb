<h2 class="ui center aligned icon header">
  <i class="circular sign in icon"></i>
  <%= t '.signin' %>
</h2>
<% if flash[:error] %>
  <div class="ui icon error message">
    <i class="attention circle icon"></i>
    <div class="content">
      <p><%= flash[:error] %></p>
    </div>
  </div>
<% end %>
<%= form_for(:session, url: sessions_path,html:{class:'ui form segment'}) do |f| %>
  <div class="field">
    <div class="ui icon input">
      <%= f.text_field :username, placeholder: t('.username'), required: :required %>
      <i class="user icon"></i>
    </div>
  </div>
  <div class="field">
    <div class="ui icon input">
      <%= f.password_field :password, placeholder: t('.password'), required: :required  %>
      <i class="lock icon"></i>
    </div>
  </div>
  <div class="two fields">
    <div class="field">
      <div class="ui toggle checkbox">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, t('.remember_me') %>
      </div>
    </div>
    <div class="field" style="text-align:right;">
      <%= link_to t('.forgot_password'), new_password_path %>
    </div>
  </div>
  <div class="2 fluid ui buttons">
    <%= f.submit t('.submit'), class: "ui blue button" %>
    <div class="or" data-text="<%= t('.or') %>"></div>
    <%= link_to t('.apply'), new_user_path, class:'ui green button' %>
  </div>

  <div class="ui hidden divider"></div>
  <div class="ui bottom right attached label">
    <%= t('.powered_by_html',
      :link => link_to('Natty', 'https://github.com/wentaoliu/natty')) %>
  </div>
<% end %>

<script>
$(document).on("ready page:load", function() {
  $('.ui.checkbox')
    .checkbox()
  ;
});
</script>
