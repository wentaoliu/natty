<div class="ui secondary menu">
  <div class="item">
    <div class="ui huge breadcrumb">
      <%= link_to t('module.instruments'), instruments_path, class:'section' %>
      <i class="right angle icon divider"></i>
      <%= link_to @instrument.name, @instrument, class: "section" %>
      <i class="right angle icon divider"></i>
      <%= link_to "Bookings", instrument_bookings_path(@instrument), class: "section" %>
      <i class="right angle icon divider"></i>
      <div class="section"><%=l @booking.starts_at, format: :long %></div>
    </div>
  </div>
  <div class="right menu">
    <%= link_to edit_instrument_booking_path(@instrument, @booking), class:"item" do %>
      <i class="edit icon"></i><%= t '.edit' %>
    <% end if can? :update, @booking %>
    <%= link_to [@instrument, @booking], method: :delete, data: { confirm: t('.delete_confirm') },
        class:"item" do %>
      <i class="red trash icon"></i><%=t '.delete' %>
    <% end if can? :destroy, @booking %>
  </div>
</div>

<table class="ui collapsing definition table">
  <tbody>
    <tr>
      <td><%=t '.starts_at' %></td>
      <td><%=l @booking.starts_at, format: :long %></td>
    </tr>
    <tr>
      <td><%=t '.ends_at' %></td>
      <td><%=l @booking.ends_at, format: :long %></td>
    </tr>
    <tr>
      <td><%=t '.record' %></td>
      <td><%= @booking.record %></td>
    </tr>
  </tbody>
</table>
