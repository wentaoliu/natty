<div class="ui vertical segment">
  <h2 class="ui header">
    <i class="circular inverted blue briefcase icon"></i>
    <div class="content">
      <%=t 'module.meetings' %>
    </div>
  </h2>
  <%= form_tag meetings_path, method:'GET', class:"ui form" do %>
    <div class="inline fields">
      <div class="field">
        <%= text_field_tag :search, params[:search], placeholder: t('.search') %>
      </div>
      <div class="field">
        <%= submit_tag t('.search'), class:"ui blue button" %>
      </div>
    </div>
  <% end %>
  <%= link_to new_meeting_path, class:"ui green labeled icon button" do %>
    <i class="plus icon"></i><%=t '.new' %>
  <% end %>
</div>

<table class="ui table segment">
  <thead>
    <tr>
      <th class="eight wide"><%=t '.table.title' %></th>
      <th class="four wide"><%=t '.table.time' %></th>
      <th class="four wide"><%=t '.table.place' %></th>
    </tr>
  </thead>
  <tbody>
    <% @meetings.each do |item| %>
      <tr>
        <td><%= link_to item.title, item %></td>
        <td><%= "#{l item.starts_at,format: :short} - #{l item.ends_at,format: :short}" %></td>
        <td><%= item.place %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @meetings %>
