<div class="ui vertical segment">
  <h2 class="ui header">
    <i class="blue setting icon"></i>
    <div class="content"><%=t 'settings.header' %></div>
  </h2>
</div>

<div class="ui blue menu">
  <%= link_to edit_settings_email_path, class:'item' do %>
    <i class="mail icon"></i> <%=t 'settings.menu.email' %>
  <% end %>
  <%= link_to edit_settings_avatar_path, class:'active item' do %>
    <i class="camera retro icon"></i> <%=t 'settings.menu.avatar' %>
  <% end %>
  <%= link_to edit_settings_password_path, class:'item' do %>
    <i class="lock icon"></i> <%=t 'settings.menu.security' %>
  <% end %>
  <%= link_to edit_settings_locale_path, class:'item' do %>
    <i class="world icon"></i> <%=t 'settings.menu.locale' %>
  <% end %>
</div>

<%= form_for(@user, url: settings_avatar_path, html:{class:'ui form segment'}) do |f| %>

  <div class="field">
    <%= f.label :avatar, t('.avatar') %>
    <%= image_tag current_user.avatar.url(:thumb), class:'ui avatar image' %>
    <div class="ui hidden divider"></div>
    <%= f.file_field :avatar %>
  </div>

  <%= f.submit t('.submit'), class:"ui blue button" %>

<% end %>
