<div class="ui vertical segment">

  <div class="ui huge header">
    <div class="ui label">
      <i class="pencil icon"></i>
      <%=t 'sidebar.wikis' %>
    </div>
    <%= @wiki.title %>
  </div>

  <div class="ui visible message">
    <%=t '.header.info',{author: @article.user.name, time:(l @article.created_at,:format=>:long)} %>
  </div>
  <p>
    <%= link_to t('.action.edit'), edit_wiki_article_path(@wiki,@article), class:"ui button" %>
    <%= link_to t('.action.modify'), edit_wiki_path(@wiki), class:"ui button" %>
    <%= link_to t('.action.history'), wiki_articles_path(@wiki), class:'ui button' %>
  </p>
</div>
<div class="ui piled segment"><%= raw @article.content %></div>
