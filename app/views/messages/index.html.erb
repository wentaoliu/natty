<div class="ui vertical segment">
  <%= link_to new_message_path, class:"ui green labeled icon button" do %>
    <i class="plus icon"></i><%=t '.header.new' %>
  <% end %>
</div>

<p id="notice"><%= notice %></p>

<table class="ui table segment">
  <thead>
    <tr>
      <th class="three wide"><%=t '.table.name' %></th>
      <th class="three wide"><%=t '.table.messagename' %></th>
      <th class="four wide"><%=t '.table.email' %></th>
      <th class="two wide"><%=t '.table.state' %></th>
      <th class="two wide"><%=t '.table.admin' %></th>
      <th class="two wide"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= link_to message.title message %></td>
        <td><%= message.user.name %></td>
        <td><%= message.content %></td>
        <td>
          <%= link_to content_tag('i',nil,class:'edit icon'), edit_message_path(message) %>
          <%= link_to content_tag('i',nil,class:'red trash icon'), message, method: :delete,
                data: { confirm: t('.table.delete_confirm') } %>
        </td>
      </tr>
    <% end if @messages %>
  </tbody>
</table>
